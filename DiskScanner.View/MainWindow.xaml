<Window x:Class="DiskScanner.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiskScanner.View"
        mc:Ignorable="d"
        Title="Anna's Disk Scanner" Height="450" Width="800">
        <DockPanel LastChildFill="False">
        <ToolBar DockPanel.Dock="Top">
            <Button Margin="2" Content="Start" HorizontalAlignment="Left" VerticalAlignment="Top" Height="32" Background="#00000000"/>
            <Separator/>
            <Button Margin="2" Content="Stop" HorizontalAlignment="Left" VerticalAlignment="Top" Height="32"/>
            <Separator/>
            <Button Margin="2" Content="Exit" HorizontalAlignment="Left" VerticalAlignment="Top" Height="32" Click="Button_Click"  /> 


        </ToolBar>
        <StatusBar DockPanel.Dock="Bottom" Height="20" HorizontalContentAlignment="Right">
            <TextBlock Text="Status" MinWidth="100" MaxWidth="500"/>
            <ProgressBar Height="10" MinWidth="200" HorizontalAlignment="Right"/>



        </StatusBar>   
        </DockPanel>

</Window>

<Window x:Class="DiskScanner.View.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiskScanner.View"
        mc:Ignorable="d"
        Title="About Banannas Drive Scanner" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition MinHeight="20" Height="auto"/>
            <RowDefinition MinHeight="20" Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition MinHeight="20" Height="auto"/>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="241*"/>
            <ColumnDefinition Width="256*"/>
            <ColumnDefinition Width="303*"/>
        </Grid.ColumnDefinitions>
        <TextBox Name="About" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" VerticalScrollBarVisibility="Auto" IsReadOnly="True" TextWrapping="Wrap"/>
        <Label Grid.Row="3" Grid.Column="0" Content="Link for github access: "/>
        <TextBlock Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" VerticalAlignment="Center">
            <Hyperlink NavigateUri="https://github.com/annaschoenenberger/DiskScanner" />
            https://github.com/annaschoenenberger/DiskScanner

        </TextBlock>
    </Grid>
</Window>
